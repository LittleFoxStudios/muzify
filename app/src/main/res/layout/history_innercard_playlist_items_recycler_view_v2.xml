<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/innerCardPlaylistItemsRVBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/InnerCardSongAlbumCoverHolder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:src="@drawable/spotify_icon"
            android:padding="10dp"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/InnerCardSongTitleHolder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/InnerCardSongAlbumCoverHolder"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            tool:text="Fireflies"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:layout_marginStart="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/InnerCardSongArtistHolder"
            app:layout_constraintTop_toBottomOf="@+id/InnerCardSongTitleHolder"
            app:layout_constraintLeft_toRightOf="@id/InnerCardSongAlbumCoverHolder"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            tool:text="Fireflies"
            android:textSize="13sp"
            android:textAlignment="textStart"
            android:layout_marginStart="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/InnerCardSongProcessedByHolder"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/InnerCardSongAlbumCoverHolder"
            app:layout_constraintTop_toBottomOf="@+id/InnerCardSongArtistHolder"
            tool:text="Fireflies"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/sourcePlaylistItemExternalLinkSelector"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@+id/InnerCardSongTitleHolder"
            app:layout_constraintTop_toTopOf="parent"
            tool:src="@drawable/youtube_music_icon"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            />
        <ImageView
            android:id="@+id/destinationPlaylistItemExternalLinkSelector"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@+id/sourcePlaylistItemExternalLinkSelector"
            app:layout_constraintTop_toTopOf="parent"
            tool:src="@drawable/spotify_icon"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            />
        <ImageView
            android:id="@+id/InnerCardSongErrorHolder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@+id/destinationPlaylistItemExternalLinkSelector"
            app:layout_constraintTop_toTopOf="parent"
            tool:src="@drawable/error_icon"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            />
        <RelativeLayout
            android:id="@+id/externalContentLinkBlock"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            >

            <ImageView
                android:id="@+id/playlistItemExternalContentLink"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/open_link" />
            <View
                android:id="@+id/innerCardPlaylistItemExternalContentShineEffect"
                android:layout_marginTop="0dp"
                android:layout_marginStart="-10dp"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:background="@drawable/shine_background"
                android:rotation="10" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/icsb"
        tool:visibility="gone"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icsb_profilePicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            tool:src="@drawable/spotify_icon"
            android:padding="10dp"
            android:layout_marginStart="2dp"
            />

        <TextView
            android:id="@+id/icsb_userName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/icsb_profilePicture"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            tool:text="LittleFox Studios"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/icsb_accountEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/icsb_userName"
            app:layout_constraintLeft_toRightOf="@id/icsb_profilePicture"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            tool:text="LittleFox Studios"
            android:fontFamily="@font/roboto_thin"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/icsb_shareDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/icsb_accountEmail"
            app:layout_constraintLeft_toRightOf="@id/icsb_profilePicture"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            tool:text="LittleFox Studios"
            android:fontFamily="@font/roboto_thin"
            android:textSize="13sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/icsb_musicServiceImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tool:src="@drawable/spotify_icon"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>