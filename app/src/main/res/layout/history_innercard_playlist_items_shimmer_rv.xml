<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/black">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="10dp"
        android:id="@+id/InnerCardSongAlbumCoverHolderSH"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        android:background="#B3B3B3"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/InnerCardSongTitleHolderSH"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/InnerCardSongAlbumCoverHolderSH"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:layout_marginStart="5dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:background="#B3B3B3"
        />
    <TextView
        android:id="@+id/InnerCardSongArtistHolderSH"
        app:layout_constraintTop_toBottomOf="@+id/InnerCardSongTitleHolderSH"
        app:layout_constraintLeft_toRightOf="@id/InnerCardSongAlbumCoverHolderSH"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"

        android:textSize="13sp"
        android:textAlignment="textStart"
        android:layout_marginStart="5dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:background="#B3B3B3"
        />

    <TextView
        android:id="@+id/InnerCardSongProcessedByHolderSH"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/InnerCardSongAlbumCoverHolderSH"
        app:layout_constraintTop_toBottomOf="@+id/InnerCardSongArtistHolderSH"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:background="#B3B3B3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>