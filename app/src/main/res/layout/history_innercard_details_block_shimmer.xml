<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <!-- THIS IS FOR SHIMMER COPY - DO NOT USE!!! -->

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/black"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/innerCardSourceTitleShimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOURCE"
                android:textColor="@color/white"
                android:fontFamily="@font/audiowide"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/innerCardAlbumBlock"
                android:layout_marginTop="-60dp"
                />
            <ImageView
                android:id="@+id/innerCardSourceImageShimmer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/innerCardSourceTitleShimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/innerCardAlbumBlockShimmer"
                android:background="#B3B3B3"
                />

            <RelativeLayout
                android:id="@+id/innerCardAlbumBlockShimmer"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:padding="3dp"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="#B3B3B3"
                        app:shapeAppearanceOverlay="@style/RoundedImage.UpperLeftCorner"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:scaleType="fitXY"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="#B3B3B3"
                        app:shapeAppearanceOverlay="@style/RoundedImage.UpperRightCorner"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:scaleType="fitXY"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="#B3B3B3"
                        app:shapeAppearanceOverlay="@style/RoundedImage.BottomLeftCorner"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:scaleType="fitXY"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:shapeAppearanceOverlay="@style/RoundedImage.BottomRightCorner"
                        android:background="#B3B3B3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/innerCardDestinationTitleShimmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESTINATION"
                android:textColor="@color/white"
                android:fontFamily="@font/audiowide"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/innerCardAlbumBlockShimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="-60dp"
                />
            <ImageView
                android:id="@+id/innerCardDestinationImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/innerCardDestinationTitleShimmer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/innerCardAlbumBlockShimmer"
                android:background="#B3B3B3"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>