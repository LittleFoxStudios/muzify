<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/muzi_share_fragment"
    android:background="@color/black"
    tools:context=".homescreenfragments.transfer.MuziShareTransferAuthentication">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/muziShareImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/muzi_share"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            />
        <TextView
            android:id="@+id/muziShareTitleHolder"
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/muziShareImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:text="Enter Share Code"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textSize="35sp"
            />

        <EditText
            android:id="@+id/muziShareCodeEditText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/muziShareTitleHolder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"
            android:textSize="20sp"
            android:hint="share code"
            tools:hint="share code"
            android:textColorHint="@color/grey"
            android:textColorHighlight="@color/grey"
            android:textAlignment="center"
            android:backgroundTint="@color/nav_btn_selected"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/muziShareStartButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/muziShareCodeEditText"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/black"
            android:text="START"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@color/nav_btn_selected"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/nav_btn_selected"
            app:strokeWidth="2dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>