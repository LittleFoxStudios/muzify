<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/black"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dummy_outercardImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#B3B3B3"
            android:rotationY="20"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/dummy_outercardTxt1"
            android:layout_width="200dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dummy_outercardImage"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="-45dp"
            android:background="#B3B3B3"
            />

        <TextView
            android:id="@+id/dummy_outercardTxt2"
            android:layout_width="150dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dummy_outercardTxt1"
            app:layout_constraintLeft_toRightOf="@id/dummy_outercardImage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="#B3B3B3"
            />

        <TextView
            android:id="@+id/dummy_outercardTxt3"
            android:layout_width="100dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dummy_outercardTxt2"
            app:layout_constraintLeft_toRightOf="@id/dummy_outercardImage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="#B3B3B3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
