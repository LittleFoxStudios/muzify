<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            >
            <TextView
                android:id="@+id/shareInfoSNo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                tool:text="1"
                android:textColor="@color/orange"
                android:fontFamily="@font/audiowide"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:paddingTop="10dp"
                android:autoSizeTextType="uniform"
                android:layout_marginLeft="200dp"
                />
            <ImageView
                android:id="@+id/shareInfoDestinationImage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                tool:src="@drawable/youtube_music_icon"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@color/black"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/shareInfoProfilePic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:padding="15dp"
                    android:layout_weight="3"
                    tool:src="@drawable/youtube_music_icon"
                    app:shapeAppearanceOverlay="@style/RoundedImage"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:weightSum="3"
                >
                <TextView
                    android:id="@+id/shareInfoUserName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:textSize="17dp"
                    tool:text="James Smith"
                    android:textColor="@color/white"
                    android:paddingTop="2dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/shareInfoEmail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_thin"
                    android:textSize="14dp"
                    tool:text="james.smith@muzify.com"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/shareInfoDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_thin"
                    android:textSize="14dp"
                    tool:text="10-02-2020 19:00:01"
                    android:textColor="@color/white"
                    android:paddingTop="2dp"
                    android:paddingLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
